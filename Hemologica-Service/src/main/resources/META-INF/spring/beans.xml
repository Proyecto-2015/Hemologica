	<bean id="userCreateQueue" class="${jms.queue}">
		<constructor-arg index="0">
			<value>USER_CREATE_QUEUE</value>
		</constructor-arg>
	</bean>
	
<!-- 	<bean id="userMailQueue" class="${jms.queue}"> -->
