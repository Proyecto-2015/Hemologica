<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
     
     
     <application>
     	   <locale-config>
     	   		<default-locale>es</default-locale>
     	   		<supported-locale>es</supported-locale>
     	   		<supported-locale>en</supported-locale>
     	   		<supported-locale>fr</supported-locale>
     	   		<supported-locale>br</supported-locale>
     	   </locale-config>
	   <resource-bundle>
			<base-name>org.hemologica.yodono.messages</base-name>
			<var>messages</var>
	   </resource-bundle>
	   
     </application>
     
     <converter>
		<converter-id>dataCityConverter</converter-id>
		<converter-class>org.hemologica.yodono.web.beans.DataCityConverter</converter-class>
     </converter>
     
     <managed-bean>
     	<managed-bean-name>language</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.LanguageBB</managed-bean-class>
     	<managed-bean-scope>session</managed-bean-scope>
     </managed-bean>
     <managed-bean>
     	<managed-bean-name>sessionBB</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.SessionBB</managed-bean-class>
     	<managed-bean-scope>session</managed-bean-scope>
     </managed-bean>
     <managed-bean>
     	<managed-bean-name>donationsBB</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.DonationsBB</managed-bean-class>
     	<managed-bean-scope>view</managed-bean-scope>
     	<managed-property>
			<property-name>languageBB</property-name>
			<property-class>org.hemologica.yodono.web.beans.LanguageBB</property-class>
			<value>#{language}</value>
		</managed-property>
     </managed-bean>
     <managed-bean>
     	<managed-bean-name>transfusionBB</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.TransfusionBB</managed-bean-class>
     	<managed-bean-scope>view</managed-bean-scope>
     </managed-bean>
     <managed-bean>
     	<managed-bean-name>userBB</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.UserBB</managed-bean-class>
     	<managed-bean-scope>view</managed-bean-scope>
     </managed-bean>
     <managed-bean>
     	<managed-bean-name>banksBB</managed-bean-name>
     	<managed-bean-class>org.hemologica.yodono.web.beans.BanksBB</managed-bean-class>
     	<managed-bean-scope>view</managed-bean-scope>
     </managed-bean>
     
	<navigation-rule>
	   <from-view-id>*</from-view-id>
	   <navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/template/index.xhtml</to-view-id>
	   </navigation-case>
	   <navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/pages/myDonations.xhtml</to-view-id>
	   </navigation-case>
	   <navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/pages/Indicadores.xhtml</to-view-id>
	   </navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>requirements</from-outcome>
			<to-view-id>/pages/requirements.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>bloodBanks</from-outcome>
			<to-view-id>/pages/bloodBanks.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>preparation</from-outcome>
			<to-view-id>/pages/preparation.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>myDonations</from-outcome>
			<to-view-id>/pages/myDonations.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>myTransfusions</from-outcome>
			<to-view-id>/pages/myTransfusions.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
  	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>myProfile</from-outcome>
			<to-view-id>/pages/userinfo.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
     
</faces-config>
